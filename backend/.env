# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
NODE_ENV=development
PORT=5000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Option 1: Use connection string (prioritized if set)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# Option 2: Use individual config (used if DATABASE_URL not set)
DB_NAME=skill_connect
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# MINIO CONFIGURATION (OBJECT STORAGE)
# ============================================================================
MINIO_HOST=localhost
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin@123456
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin@123456
MINIO_BUCKET=skill-connect-bucket
MINIO_API_URL=http://localhost:9000

# ============================================================================
# EMAIL CONFIGURATION - MAILPIT (LOCAL TESTING)
# ============================================================================
MAILPIT_HOST=mailpit
MAILPIT_PORT=1025
EMAIL_USER=test@skillconnect.com
EMAIL_PASS=test

# ============================================================================
# EMAIL CONFIGURATION - SENDPULSE (PRODUCTION)
# ============================================================================
SENDPULSE_HOST=smtp.sendpulse.com
SENDPULSE_PORT=587
SENDPULSE_USER=your_sendpulse_email@example.com
SENDPULSE_PASS=your_sendpulse_password
SENDPULSE_API_KEY=your_sendpulse_api_key
SENDPULSE_API_SECRET=your_sendpulse_api_secret
SENDPULSE_FROM_EMAIL=noreply@skillconnect.com
SENDPULSE_MAX_USERS=300
SENDPULSE_MAX_EMAILS=12000

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
ADMIN_EMAIL=admin@skillconnect.com
ADMIN_PASSWORD=admin123

# ============================================================================
# JWT & SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=24h

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:3000
